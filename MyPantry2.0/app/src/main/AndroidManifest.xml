<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.z.mypantry20">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyPantryView"
            android:label="@string/title_activity_item_view" />
        <activity
            android:name=".CategoryOverviewView"
            android:exported="true"
            android:label="@string/title_activity_category_view"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".CategoryView" />
        <activity android:name=".RecipeView" />
        <activity
            android:name=".AddCategoryActivity"
            android:label="@string/title_activity_add_category"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".PantryItemView"
            android:label="@string/title_activity_pantry_item_view"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".AddPantryItemActivity"
            android:label="@string/title_activity_add_pantry_item"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>